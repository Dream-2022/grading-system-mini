<veiw>
  <view class="selectBigBox">
    <view class="selectBoxZi" bind:tap="onChildrenClick">选择小孩：</view>
    <view class="selectBox">
      <view class="selectBar">
        <picker mode="selector" range="{{selectArray}}"  bindchange="pickerChange">
          <view class='picker'>{{selectValue}}</view>
        </picker>
      </view>
      <image src="../../static/img/Down.png" style="width: 28rpx; height:28rpx; margin-right: 20rpx; margin-top: 8rpx"></image>
    </view>
  </view>
  <view class="container">
    <canvas style="width: 700rpx; height: 400rpx;" canvas-id="yueEle" binderror="canvasIdErrorCallback"></canvas>
    <canvas style="width: 400px; height: 500px;"  disable-scroll="true" canvas-id="yuePie" binderror="canvasIdErrorCallback"></canvas>
  </view>
</veiw>