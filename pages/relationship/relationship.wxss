/* pages/relationship/relationship.wxss */

.title{
  margin-left: 40rpx;
  /* margin-top: 40rpx; */
}

.box{
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background-color: #ebeffe;
  height: 300rpx;
  width: 90%;
  margin-left: 5%;
  border-radius: 30rpx;
}

.box .top{
  display: flex;
  justify-content: space-around;
  height: 200rpx;
  /* background-color: aqua; */
}

.box .top .left{
  margin-left: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  /* background-color: cornflowerblue; */
}

.box .top .right{
  flex:1;
  display: flex;
  flex-direction: column;
  /* align-items: left; */
  margin-left:40rpx;
  /* background-color: chartreuse; */
}

.box .top .right text{
  line-height: 45rpx;
  font-size: 28rpx;
}

.box .top .right .id{
  color:#3a63f3;
  font-weight: 700;
}

.box .bottom{
  flex:1;
  /* width: 100%; */
  display: flex;
  flex-direction: row;
  /* background-color: aquamarine; */
  justify-content: right;
  align-items: center;
}

.box .bottom button{
  /* flex:1; */
  /* margin-right: 20rpx; */
  box-sizing: border-box;
  width: 150rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
  font-weight: 400;
  height: 60rpx;
  font-size: 24rpx;
  line-height: 30rpx;
  /* line-height: 60rpx; */
  border:2rpx solid #3a63f3;
}

.box .bottom button:nth-child(1)
{
  margin-right: 30rpx;
  color:#97BA2D;
}

.box .bottom button:hover{
  background-color: #eceffe;
}

.box .bottom button:nth-child(2)
{
  margin-left: 0;
  margin-right: 50rpx;
  color:#F86447;
}
