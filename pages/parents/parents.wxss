/* pages/notice/notice.wxss */

.title{
  margin-left: 35rpx;
  margin-bottom: 30rpx;
  margin-top: 30rpx;
}
.parentBoxes{
  margin-left: 5%;
  width: 90%;
  box-sizing: border-box;
  border-top: 2rpx solid #dadada;
}
.parentBox{
  font-size: 26rpx;
  height: 160rpx;
  display: flex;
  align-items: center;
  line-height: 100rpx;
  border-bottom: 2rpx solid #dadada;
}
.parentInformation text{
  display: block;
  line-height: 50rpx;
}
.parentIdentity{
  font-size: 30rpx;
}
.unbindButton{
  cursor: pointer;
  background-color: #7990E0;
  color: #fff;
  width: 120rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  justify-content: center;
}